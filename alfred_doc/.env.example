# mobile/.env.example - Alfred Mobile Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================

# Backend API URL
API_URL=http://localhost:8000

# For production
# API_URL=https://api.alfred.app

# ============================================
# Environment
# ============================================

# App environment: development, preview, production
APP_ENV=development

# Enable debug mode
DEBUG=true

# ============================================
# Analytics (Optional)
# ============================================

# PostHog
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Sentry
SENTRY_DSN=

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable voice input
FEATURE_VOICE_INPUT=true

# Enable offline mode
FEATURE_OFFLINE_MODE=false

# Enable experimental features
FEATURE_EXPERIMENTAL=false
